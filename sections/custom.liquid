  {%  stylesheet %}
  .section-title{

    text-align: center;
    font-weight: 500;
    font-size: 25px;
    text-transform: uppercase;
  }
  .section-description
  {
    text-align: center;
    font-weight: 500;
    padding-bottom:10px;
    font-size: 35px;
    text-transform: normal;
  }
  #billboard{
    width: 100%;
    padding-left: 5%;
    padding-right: 5%;
    padding-top: 5%;
  }
.swiper {
      display: flex;
      gap: 1rem; /* Space between items */
      overflow: hidden;
      position: relative;
    }

    .swiper-slide {
      display: flex;
      justify-content: center;
      align-items: center;
      transition: transform 0.3s ease;
    }

    .banner-item {
      text-align: center;
      display: flex
;
    flex-direction: column;
    gap: 1rem;
    }

    .image-holder img {
      width: 100%;
      height: auto;
      border-radius: 8px;
    }

    /* Mobile View - Slider */
    @media (max-width: 768px) {
      .swiper {
        display: flex;
        overflow-x: auto; /* Enable horizontal scrolling */
        scroll-snap-type: x mandatory; /* Snap to slides */
        gap: 10px; /* Smaller spacing for mobile */
      }

      .swiper-slide {
        flex: 0 0 40%; /* 40% width for mobile items */
        scroll-snap-align: center; /* Center align slides */
      }
    }

    /* Optional Scrollbar Styling */
    .swiper {
      scrollbar-width: thin; /* Firefox */
    }

    .swiper::-webkit-scrollbar {
      height: 8px;
    }

    .swiper::-webkit-scrollbar-thumb {
      background: #888;
      border-radius: 4px;
    }

    .swiper::-webkit-scrollbar-thumb:hover {
      background: #555;
    }

    /* Hide navigation arrows on mobile */
    @media (max-width: 768px) {
      .icon-arrow {
        display: none;
      }
    }

  {% endstylesheet %}
      
