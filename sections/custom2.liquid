{% stylesheet %}


@mixin clearfix {
  &:after {
    content: "";
    display: table;
    clear: both;
  }
}

.hide {display:none}

*, *::after,*::before{
  box-sizing:border-box;
}


body, html{
  background: #efefef;
  font-size:6px;
  padding:4rem 2rem;
  font-family: 'Droid Sans', sans-serif;
  font-weight:400;
   -webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
  
   @media (min-width: 860px) {
      font-size:8px;
      padding:3rem 5rem;
  }

  @media (min-width: 1200px) {
      font-size:10px;
      padding:2rem 3rem;
  }
}


.ui-wrapper {
  position:relative;
  max-width: 112rem;
  min-width: 480px;
  background:#fff;
  margin: 0 auto;
  overflow:hidden;
  box-shadow: 0 0 35px 20px rgba(79,69,66,0.2);
  
  .mask {
    position:absolute;
    display:block;
    width:100%;
    height:100%;
    top:0;
    left:0;
    opacity:0;
    z-index:5;
  }
  
  .header-wrapper {
    position:absolute;
    width:100%;
    height:12rem;
    padding:4rem;
    opacity:0;
    z-index:10;
    
    @include clearfix;
    
    .logo-wrapper {
      position:relative;
      float:left;
      
      .logo {
        color:white;
        text-transform:uppercase;
        font-size:1.6rem;
        font-weight:800;
        span {display:block}
      }
    }
    
    .menu-wrapper {
      position:relative;
      float:right;
      
      ul {
        position:relative;
        margin:0;
        padding:0;
        list-style:none;
        
        @include clearfix;
      }
      
      li {
        position:relative;
        float:left;
        
        &:last-child a{
          padding-right:0;
          
          &::after {
            width:0;
            height:0;
          }
        }
   
      }
      
      a {
        position:relative;
        display:block;
        color:white;
        text-decoration:none;
        font-size:1.8rem;
        padding:0 2rem;
        line-height:1;
        font-weight:800;
        
        &::after {
          content:"";
          display:block;
          position:absolute;
          width:0.1rem;
          background: rgba(255,255,255,0.5);
          height:1rem;
          left: 100%;
          top:50%;
          transform:translateY(-50%);
        }
      }
    }  
    
  }
  
  .loading-wrapper{
    position:absolute;
    display:block;
    width:100%;
    top:50%;
    z-index:9;
    
    @include clearfix;
    
    .loading-screen {
      position:absolute;
      display:block;
      width:100%;
      height:0.1rem;
      background: #e8c19d;
      z-index:1;
    }
    
    .loading-line {
      position:relative;
      display:block;
      width:100%;
      height:0.1rem;
      background: rgba(0,0,0,0.1);
      z-index:2;
      
      .line {
        position:absolute;
        top:0;
        left:0;
        width:0%;
        height:0.1rem;
        background:white;
      }
    }
  }
  
  
  
  .slider-wrapper {
    position:relative;
    height: 65rem;
    overflow:hidden;
    //background:rgb(232, 193, 157);

    @include clearfix;
    
    .slider-container, .slide {
      width:100%;
      height:100%;
    }
    
    .slide{
      position:absolute;
      display:block;
      
      &:first-child {
        .slide-image {
          opacity:0;
        }
      }
      
      h1 {
        position:absolute;
        color:white;
        font-size:7vw;
        display:inline-block;
        line-height:1;
        margin:0;
        transform:translateY(50%);
        white-space:nowrap;
        visibility:hidden;
        transition:all 0.5s ease;
        z-index:6;
        
      }
      
      &.active h1{
        
        visibility:visible;
        opacity:0;
        
      }
      
      &.prev h1{
        
        visibility:visible;
        opacity:0;
        
      }
      
      &.next h1{
        
        visibility:visible;
        opacity:0;
        
      }
    }
    
    .slide-top {
      position:relative;
      width:100%;
      height:50%;
      top:0; 
      overflow:hidden;
      
      .slide-image {
         background-position:top center;
         top:0;
         clip-path: url(#masking);
         transform:translateX(-8%);
         opacity:0;
      }
    }
    
    .slide-bottom {
      position:relative;
      width:100%;
      height:50%;
      overflow:hidden;
      
      .slide-image {
        background-position:bottom center;
        bottom:0;
        transform:translateX(8%);
        opacity:0;
        
      }
    }
    
    .slide-image {
      position:absolute;
      display:block;
      width:100%;
      height:200%;
      background-size:cover;
      
    }
  }
  
  .footer-wrapper {
    position:absolute;
    display:block;
    width:100%;
    bottom:0;
    padding:0 12rem 5rem 6rem;
    opacity:0;
    z-index:10;
    
    @include clearfix;
    
    .category-wrapper {
      position:relative;
      float:left;
      overflow:hidden;
      height:2rem;
      width:25rem;
      
      .category {
        position:absolute;
        font-weight:800;
        font-size:1.3rem;
        color:white;
        text-transform:uppercase;
        display:block;
        
        &.next {
          transform:translateY(-100%);
        }
      }
    }
    
    .navigation-wrapper {
      position:relative;
      float:right;
      
      ul {
        position:relative;
        margin:0;
        padding:0;
        list-style:none;
        z-index:5;
        
        @include clearfix;
      }
      
      li {
        position:relative;
        float:left;
        color:white;
        text-transform:uppercase;
        padding:0 1rem;
        cursor:pointer;
        font-weight:800;
        font-size:1.3rem;
        cursor:pointer;
        
        &::after {
          content:"";
          display:block;
          position:absolute;
          width:0.1rem;
          background: rgba(255,255,255,0.5);
          height:1.3rem;
          left: 100%;
          top:50%;
          transform:translateY(-50%);
        }
        
         &:last-child {
          padding-right:0;
          
          &::after {
            width:0;
            height:0;
          }
        }
      }
    }
    
    .slide-number-wrapper {
      position:absolute;
      right:-4.8rem;
      top: -3.5rem;
      font-size:7.5rem;
      font-weight:800;
      color:rgba(255,255,255,0.3);
      overflow:hidden;
      z-index:1;
      
      .number {
        position:relative;
        display:block;
        overflow:hidden;
      }
      
      .change-slide-number {
        position:relative;
        float:right;
        width:4rem;
        height:8rem;
        
        span {
          display:block;
          position:absolute;
          
          &.current {
            top:0;
          }
          
          &.next {
            transform: translateY(100%);
          }
          
          &.prev {
            transform: translateY(-100%);
          }
        }
      }

    } 
  }
}



